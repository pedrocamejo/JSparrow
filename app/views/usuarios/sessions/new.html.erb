<div align="center">
<h2 class="page-header">Inicar Session  </h2>
  <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], id: "flash_alert", class: "flash_alert") if flash[:alert] %>
	<br/>
	<%= form_for(resource, as: resource_name, url: new_usuario_session_path,
		 html: {class:'form-horizontal',role:'form',style: "width: 500px; "}) do |f| %>
		<div class="form-group">
			<%= f.label :login , class: "col-sm-3 control-label " %>
			<div class="col-sm-9">
			 <%= f.text_field :login,class:"form-control ", maxlength:30,autofocus: true %>
			</div> 
		</div>
		<div  class="form-group">
			<%= f.label :password ,class: "col-sm-3 control-label" %>
			<div class="col-sm-9">
				<%= f.password_field :password, class:"form-control ",autocomplete: "off" %>
		 	</div>	    
		</div>
		<div class="" align="center">
			<%= f.submit "Iniciar", class: "btn btn-primary" %> 		
		</div>
	<% end %>
</div>
 


