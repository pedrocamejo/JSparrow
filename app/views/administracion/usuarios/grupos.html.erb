
<div class="panel-body2"  style="height: 95%;">
  <%= link_to 'Regresar',  administracion_usuarios_path ,class:"btn btn-default btn-sm" %>     
</div>

<% if flash[:notice] %>
    <div class="alert alert-success" role="alert"><%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="panel panel-default">
	<div class="panel-body">
		<div class="row" style="">
		  <div class="col-md-4">
		    <label class="list-group-item-heading"
		    	 style="font-weight: bold;">UserName 
			    <%= @administracion_usuario.username  %>
		    </label>
		  </div>
		  <div class="col-md-4">
		    <label class="list-group-item-heading"
		    	 style="font-weight: bold;">Cedula 
			    <%= @administracion_usuario.cedula  %>
		    </label>
		  </div>
		  <div class="col-md-4">
		    <label class="list-group-item-heading"
		    	 style="font-weight: bold;">Nombres 
			    <%= @administracion_usuario.nombres  %>
		    </label>
		  </div>

		</div>
	</div>
</div>
 

<div class="row">
	<div class="col-md-1">
	<%= link_to "Ageregar",administracion_usuario_grupos_path(@administracion_usuario),method: :post , 
 class: "btn btn-default"  %>
	</div>
	<div class="col-md-11">
		<div class="panel panel-default">
		  <div class="panel-heading">Grupos  </div>
		  <div class="panel-body">
		  <div >
			<table class="table"  >
			<% @administracion_usuario.grupos.each do |grupo|%>
			  <tr  align="rigth" >
			  	<td><%= grupo.nombre %></td>
			  	<td><%= button_to "QUITAR",administracion_usuario_grupo_del_path(params[:usuario_id], grupo_id: grupo.id ), class: "btn btn-default" , data: { confirm: 'Quieres Quitar este Grupo ?' } %>   <td>
			  </tr>
			  <% end %>
			</table>
				<label class="pull-right"><%= "Tiene un total de #{@administracion_usuario.grupos.size} Grupos Asociadas. " %></label>
			</div>
		  </div>
		</div>		
	</div>
</div> 